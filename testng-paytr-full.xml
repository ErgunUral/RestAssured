<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="PayTR_Full_Test_Suite" verbose="1" parallel="false" thread-count="1">
    
    <!-- Test parametreleri -->
    <parameter name="browser" value="chrome"/>
    <parameter name="environment" value="test"/>
    <parameter name="baseUrl" value="https://zeus-uat.paytr.com"/>
    <parameter name="headless" value="false"/>
    <parameter name="timeout" value="30"/>
    
    <!-- Test dinleyicileri -->
    <listeners>
        <listener class-name="org.testng.reporters.EmailableReporter"/>
        <listener class-name="org.testng.reporters.JUnitReportReporter"/>
    </listeners>
    
    <!-- PayTR Smoke Testleri -->
    <test name="PayTR_Smoke_Tests" preserve-order="true">
        <classes>
            <class name="com.example.tests.PayTRSmokeTest"/>
        </classes>
    </test>
    
    <!-- PayTR GÃ¼venlik Testleri -->
    <test name="PayTR_Security_Tests" preserve-order="true">
        <classes>
            <class name="com.example.tests.PayTRSecurityTest"/>
        </classes>
    </test>
    
    <!-- PayTR UI ve Form Testleri -->
    <test name="PayTR_UI_Tests" preserve-order="true">
        <classes>
            <class name="com.example.tests.PayTRUIElementsTest"/>
            <class name="com.example.tests.PayTRLoginScenariosTest"/>
        </classes>
    </test>
    
    <!-- PayTR Virtual POS Testleri -->
    <test name="PayTR_VirtualPOS_Tests" preserve-order="true">
        <classes>
            <class name="com.example.tests.PayTRVirtualPOSTest"/>
            <class name="com.example.tests.PayTRCardValidationTest"/>
        </classes>
    </test>
    
    <!-- PayTR API Testleri -->
    <test name="PayTR_API_Tests" preserve-order="true">
        <classes>
            <class name="com.example.tests.PayTRAPITests"/>
            <class name="com.example.tests.ApiTest"/>
        </classes>
    </test>
    
</suite>