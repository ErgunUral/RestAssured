<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="PayTR API Test Suite" verbose="1" parallel="false" thread-count="1">
    
    <parameter name="environment" value="uat"/>
    <parameter name="api.timeout" value="30"/>
    <parameter name="api.retries" value="3"/>
    <parameter name="api.base.url" value="https://zeus-uat.paytr.com"/>
    
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <listener class-name="com.example.listeners.TestListener"/>
    </listeners>
    
    <!-- Core API Tests -->
    <test name="Core API Tests" preserve-order="true">
        <groups>
            <run>
                <include name="api"/>
                <include name="core"/>
            </run>
        </groups>
        <classes>
            <class name="com.example.tests.PayTRAPITests">
                <methods>
                    <include name="testPaymentAPIEndpoint"/>
                    <include name="testAuthenticationAPI"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- API Security Tests -->
    <test name="API Security Tests" preserve-order="true">
        <groups>
            <run>
                <include name="api"/>
                <include name="security"/>
            </run>
        </groups>
        <classes>
            <class name="com.example.tests.PayTRAPITests">
                <methods>
                    <include name="testAuthenticationAPI"/>
                    <include name="testAPIRateLimit"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- API Error Handling Tests -->
    <test name="API Error Handling Tests" preserve-order="true">
        <groups>
            <run>
                <include name="api"/>
                <include name="error"/>
            </run>
        </groups>
        <classes>
            <class name="com.example.tests.PayTRAPITests">
                <methods>
                    <include name="testAPIErrorHandling"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- API Performance Tests -->
    <test name="API Performance Tests" preserve-order="true">
        <groups>
            <run>
                <include name="api"/>
                <include name="performance"/>
            </run>
        </groups>
        <classes>
            <class name="com.example.tests.PayTRPerformanceTests">
                <methods>
                    <include name="testAPIResponseTime"/>
                </methods>
            </class>
            <class name="com.example.tests.PayTRAPITests">
                <methods>
                    <include name="testPaymentAPIEndpoint"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- API Integration Tests -->
    <test name="API Integration Tests" preserve-order="true">
        <groups>
            <run>
                <include name="api"/>
                <include name="integration"/>
            </run>
        </groups>
        <classes>
            <class name="com.example.tests.PayTRIntegrationTests">
                <methods>
                    <include name="testFrontendBackendIntegration"/>
                    <include name="testThirdPartyServiceIntegration"/>
                </methods>
            </class>
            <class name="com.example.tests.PayTRUIElementsTest">
                <methods>
                    <include name="testFrontendBackendIntegration"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- API Boundary Tests -->
    <test name="API Boundary Tests" preserve-order="true">
        <groups>
            <run>
                <include name="api"/>
                <include name="boundary"/>
            </run>
        </groups>
        <classes>
            <class name="com.example.tests.PayTRBoundaryTests">
                <methods>
                    <include name="testMinimumPaymentAmount"/>
                    <include name="testMaximumPaymentAmount"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- API Negative Tests -->
    <test name="API Negative Tests" preserve-order="true">
        <groups>
            <run>
                <include name="api"/>
                <include name="negative"/>
            </run>
        </groups>
        <classes>
            <class name="com.example.tests.PayTRAPITests">
                <methods>
                    <include name="testAPIErrorHandling"/>
                </methods>
            </class>
        </classes>
    </test>
    
</suite>